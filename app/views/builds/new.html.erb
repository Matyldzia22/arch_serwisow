<div class="panel panel-success">
<div class="panel-heading"><b>New build</b> </div>

<%= form_for :build, url: builds_path do |f| %>

<table class="table">
 <div class="text-center">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
 
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_area :country %>
  </div>

  <div class="field">
    <%= f.label :style %><br>
    <%= f.text_area :style %>
  </div>

  <div class="field">
    <%= f.label :photo %><br>
    <%= f.text_area :photo %>
  </div>
 
  <div class="field">
    <%= f.submit %>
  </div>
  </div>
  </table>
<% end %>
</div>