<div class="panel panel-success">
<div class="panel-heading"><b>Build</b></div>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Style</th>
    <th>Photo</th>
  </tr>
 
 
    <tr>
      <td><%= @build.name %></td>
      <td><%= @build.country %></td>
      <td><%= @build.style %></td>
      <td>
      <%if @build.photo.blank?%>
      <%= image_tag('https://lh3.googleusercontent.com/FOBz3oA4IA6F3Kg9KhAHH3S0UX1ID27IDwSJdz46rCa9QFWcJrMmHDRgxVf48pV3tg=w300', size: '80x80') %>
      <% else %>
      <%= image_tag(@build.photo, size:'80x80') %>
      <% end %>
      </td>
      
    </tr>
  
</table>
</div>

<%= link_to 'Edit', edit_build_path(@build) %> |
